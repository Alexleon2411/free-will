<% if @event.status %>
  <div class="container d-flex flex-column align-items-center p-1">
    <h2 class="cinzel text-white fs-1">"<%= @event.name %>"</h2>
    <h3 class="plex text-white fs-6">Select one of the following opcions</h3>
  </div>
  <div class="container d-flex  flex-column align-items-center p-1"  style="background-color: transparent; max-width: 450px;">
    <% @event.propositions.each do |proposition| %>
        <div class=" d-flex flex-column align-items-center " >
          <ul class="list-group">
            <div  style="width: 400px;">
              <% if @event.propositions.select { |proposition| proposition.votes.where(user: current_user).count > 0 }.any? %>
                <li class="list-group-item m-1 p-3 text-white d-flex justify-content-between" style="border-radius: 10px 100px / 120px; background: rgba(0, 0, 0, 0.3); heigh: 50px;">
                  <div class="objectborder " style="word-wrap: break-word;">
                    <%= proposition.content %>
                  </div>
                  <div>
                    <p class="mb-0">Votes: <%= proposition.votes.size%></p>
                  </div>
                  <% if @event.votes.where(user: current_user)[0].proposition == proposition %>
                      <span class="label-important label"><i class="icon-remove icon-white"></i></span>
                      <i class="fa-solid fa-check"></i>
                      <span class="label-success label"><i class="icon-ok icon-white"></i></span>
                  <% end %>
                </li>

              <% else %>
                <%= link_to event_proposition_votes_path(@event, proposition), data: {turbo_method: :post}, class: "text-decoration-none" do  %>
                  <li class="list-group-item">
                    <div >
                      <%= proposition.content %>
                      <%= proposition.votes.size%>
                    </div>
                  </li>
                <% end %>
              <% end %>
            </div>
          </ul>
        </div>
    <% end %>
  </div>
<% else %>
  <%# result of the event%>
    <div class="container " style="text-align: center;">
      <h1 class="cinzel text-white">The winner is</h1>
      <% @event.propositions.sort_by { |proposition| -proposition.votes.count }.each do |proposition| %>
        <div class=" m-2 p-2" style="border-radius: 10px 100px / 120px; background: rgba(0, 0, 0, 0.3);">
          <p class="plex text-white">
            <%= proposition.content %>
            <%= proposition.votes.count %>
          </p>
        </div>
      <% end  %>
    </div>
<%= render "animation"%>
<% end %>

<div class="d-flex text-align-center" style="justify-content: start; margin-left: 20px;">
  <%= link_to "back to events", participants_path, class: "btn btn-outline-light objectborder" %>
</div>
