<div  style="padding-top: 5rem;">
<div class="container d-flex justify-content-center ">
  <h1 class="cinzel text-white">My Events </h1>
</div>
    <% @current_user_events.each do |event| %>
      <div class="container d-flex   align-text-center plex p-1" style="">
        <div style="overflow: hidden; width: 80%;">
          <%= link_to event_path(event), class: "text-decoration-none btn btn-outline-light", style: "overflow: hidden; max-height: auto; width: 100%; border-radius: 10px 100px / 120px; background: rgba(0, 0, 0, 0.3);" do %>
            <%= event.name.upcase %>
          <% end %>
        </div>
        <div class="d-flex align-items-center">
          <%= link_to '', edit_event_path(event), class: "text-decoration-none fa-solid fa-pen", style: "color: white; margin-top: -17px; margin-left: 20px; margin-right:10px ;" %>
          <div style="margin-top: -27px; margin-left: 20px;">
            <%= link_to "",
              event_path(event),
              data: {turbo_method: :delete,  turbo_confirm: 'Are you sure?' },
              class: "text-decoration-none fa-solid fa-trash-can",
              style: "color: white;"%>
          </div>
        </div>
      </div>
  <% end %>
</div>
